    <center>
        <StackPane>
            <Pane fx:id="backgroundPane" />
            <VBox alignment="CENTER" spacing="40.0">
                <GridPane hgap="30" vgap="30" alignment="CENTER">

                    <Button styleClass="dashboard-card, card-blue" onAction="#onGroupsClick" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <graphic>
                            <StackPane>
                                <ImageView fitWidth="100" fitHeight="100" opacity="0.15" rotate="-20" translateX="60" translateY="20">
                                    <image><Image url="@../images/paw.png"/></image>
                                </ImageView>
                                <VBox alignment="CENTER" spacing="15">
                                    <SVGPath content="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z" fill="#4facfe" scaleX="2.5" scaleY="2.5"/>
                                    <Label text="My Groups" styleClass="card-title"/>
                                    <Label text="Manage teams" styleClass="card-desc"/>
                                </VBox>
                            </StackPane>
                        </graphic>
                    </Button>

                    <Button styleClass="dashboard-card, card-orange" onAction="#onActivityClick" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <graphic>
                            <StackPane>
                                <ImageView fitWidth="100" fitHeight="100" opacity="0.15" rotate="15" translateX="-60" translateY="20">
                                    <image><Image url="@../images/paw_yellow.png"/></image>
                                </ImageView>
                                <VBox alignment="CENTER" spacing="15">
                                    <SVGPath content="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z" fill="#ffa502" scaleX="2.5" scaleY="2.5"/>
                                    <Label text="Activity Log" styleClass="card-title"/>
                                    <Label text="Recent updates" styleClass="card-desc"/>
                                </VBox>
                            </StackPane>
                        </graphic>
                    </Button>

                    <Button styleClass="dashboard-card, card-green" onAction="#onTasksClick" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <graphic>
                            <StackPane>
                                <ImageView fitWidth="100" fitHeight="100" opacity="0.15" rotate="-10" translateX="60" translateY="-20">
                                    <image><Image url="@../images/paw.png"/></image>
                                </ImageView>
                                <VBox alignment="CENTER" spacing="15">
                                    <SVGPath content="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2z" fill="#2ed573" scaleX="2.5" scaleY="2.5"/>
                                    <Label text="My Tasks" styleClass="card-title"/>
                                    <Label text="Check deadlines" styleClass="card-desc"/>
                                </VBox>
                            </StackPane>
                        </graphic>
                    </Button>

                    <Button styleClass="dashboard-card, card-purple" onAction="#onProfileClick" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <graphic>
                            <StackPane>
                                <ImageView fitWidth="100" fitHeight="100" opacity="0.15" rotate="30" translateX="-50" translateY="-30">
                                    <image><Image url="@../images/paw_red.png"/></image>
                                </ImageView>
                                <VBox alignment="CENTER" spacing="15">
                                    <SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" fill="#a55eea" scaleX="2.5" scaleY="2.5"/>
                                    <Label text="My Profile" styleClass="card-title"/>
                                    <Label text="View account details" styleClass="card-desc"/>
                                </VBox>
                            </StackPane>
                        </graphic>
                    </Button>

                </GridPane>
            </VBox>
        </StackPane>
    </center>
</BorderPane>