<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="650.0" prefWidth="950.0" styleClass="dashboard-bg" stylesheets="@../styles/main.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studyplatform.client.studyplatformclient.controller.ProfileController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="dashboard-header">
            <Button fx:id="backButton" onAction="#onBackClick" styleClass="icon-button">
                <graphic>
                    <SVGPath content="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z" fill="#555555" scaleX="1.5" scaleY="1.5" />
                </graphic>
            </Button>
            <Label text="My Profile" textFill="#2c3e50">
                <font>
                    <Font name="Segoe UI Bold" size="24.0" />
                </font>
            </Label>
        </HBox>
    </top>

    <center>
        <StackPane>
            <Pane fx:id="backgroundPane" />

            <VBox alignment="TOP_CENTER" spacing="20.0">
                <padding>
                    <Insets bottom="30" top="30" />
                </padding>

                <VBox alignment="CENTER" maxWidth="500" spacing="10" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 25; -fx-padding: 30; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 15, 0, 0, 5);">

                    <StackPane>
                        <Circle fill="transparent" radius="60" stroke="#a55eea" strokeWidth="4" style="-fx-effect: dropshadow(three-pass-box, rgba(165, 94, 234, 0.4), 15, 0, 0, 0);" />
                        <Circle fx:id="profileAvatar" fill="#e0e0e0" radius="55" />
                    </StackPane>

                    <VBox alignment="CENTER_LEFT" maxWidth="400" spacing="5">
                        <Label style="-fx-font-weight: bold; -fx-text-fill: #a55eea;" text="Name" />
                        <TextField fx:id="nameField" prefHeight="40.0" style="-fx-background-radius: 15; -fx-background-color: #f1f2f6; -fx-font-size: 14px;" />
                    </VBox>

                    <VBox alignment="CENTER_LEFT" maxWidth="400" spacing="5">
                        <Label style="-fx-font-weight: bold; -fx-text-fill: #a55eea;" text="Email" />
                        <TextField fx:id="emailField" prefHeight="40.0" style="-fx-background-radius: 15; -fx-background-color: #f1f2f6; -fx-font-size: 14px;" />
                    </VBox>

                    <Button fx:id="saveButton" onAction="#onSaveClick" prefHeight="45.0" prefWidth="400.0" style="-fx-background-color: linear-gradient(to right, #a55eea, #4facfe); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 25; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(165, 94, 234, 0.4), 10, 0, 0, 5);" text="Save Changes">
                        <VBox.margin>
                            <Insets top="10.0" />
                        </VBox.margin>
                    </Button>

                    <HBox alignment="CENTER" spacing="20">
                        <VBox.margin>
                            <Insets top="15" />
                        </VBox.margin>

                        <VBox alignment="CENTER" style="-fx-background-color: #f1f2f6; -fx-padding: 10; -fx-background-radius: 15; -fx-min-width: 130;">
                            <Label style="-fx-font-weight: bold;" text="Groups" textFill="#a55eea" />
                            <Label fx:id="groupsCountLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="0" textFill="#2c3e50" />
                        </VBox>

                        <VBox alignment="CENTER" style="-fx-background-color: #f1f2f6; -fx-padding: 10; -fx-background-radius: 15; -fx-min-width: 130;">
                            <Label style="-fx-font-weight: bold;" text="User ID" textFill="#a55eea" />
                            <Label fx:id="idLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="#" textFill="#2c3e50" />
                        </VBox>
                    </HBox>
                </VBox>

                <VBox maxWidth="500" style="-fx-background-color: rgba(255,255,255,0.8); -fx-background-radius: 15; -fx-padding: 15;">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Recent Activity" textFill="#555555" />
                    <ListView fx:id="activityList" prefHeight="100" style="-fx-background-color: transparent; -fx-control-inner-background: transparent;" />
                </VBox>

            </VBox>
        </StackPane>
    </center>

</BorderPane>