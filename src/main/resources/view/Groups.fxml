<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="650.0" prefWidth="950.0" styleClass="dashboard-bg" stylesheets="@../styles/main.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studyplatform.client.studyplatformclient.controller.GroupsController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="dashboard-header">
            <Button onAction="#onBackClick" styleClass="icon-button">
                <graphic>
                    <SVGPath content="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z" fill="#555555" scaleX="1.5" scaleY="1.5" />
                </graphic>
            </Button>
            <Label text="My Groups" textFill="#2c3e50">
                <font>
                    <Font name="Segoe UI Bold" size="24.0" />
                </font>
            </Label>
        </HBox>
    </top>

    <center>
        <StackPane>
            <Pane fx:id="backgroundPane" />
            <VBox alignment="TOP_CENTER" spacing="20">
                <padding>
                    <Insets bottom="30" left="50" right="50" top="30" />
                </padding>

                <TableView fx:id="groupsTable" style="-fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="50" text="ID" />
                        <TableColumn fx:id="nameColumn" prefWidth="250" text="Group Name" />
                        <TableColumn fx:id="descColumn" prefWidth="450" text="Description" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <HBox alignment="CENTER_RIGHT" spacing="15">
                    <Button onAction="#onCreateGroupClick" prefHeight="40" prefWidth="150" styleClass="button-action" text="Create Group" />

                    <Button onAction="#onJoinGroupClick" prefHeight="40" prefWidth="150" styleClass="button-action" text="Join Group" />
                </HBox>
            </VBox>
        </StackPane>
    </center>

</BorderPane>